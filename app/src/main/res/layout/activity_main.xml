<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avatar"
        android:textSize="32sp"
        android:textColor="#D32F2F"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Avatar Container -->
    <FrameLayout
        android:id="@+id/avatarContainer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Head (Base) -->
        <ImageView
            android:id="@+id/imgHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/body"
            android:scaleType="fitCenter"/>


        <ImageView
            android:id="@+id/imgEyebrow"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="87dp"
            android:layout_marginTop="80dp"
            android:scaleType="fitCenter"
            android:src="@drawable/eyebrow" />

        <ImageView
            android:id="@+id/imgEyes"
            android:layout_width="121dp"
            android:layout_height="75dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/eyes" />

        <!-- Beard -->

        <ImageView
            android:id="@+id/imgNose"
            android:layout_width="34dp"
            android:layout_height="33dp"
            android:layout_marginStart="133dp"
            android:layout_marginTop="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/nose" />

        <ImageView
            android:id="@+id/imgMouth"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginStart="116dp"
            android:layout_marginTop="182dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mouth" />

    </FrameLayout>

    <!-- Checkboxes Container -->
    <LinearLayout
        android:id="@+id/checkboxContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/avatarContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/cbHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Head"
            android:textSize="18sp"
            android:textColor="#000000"
            android:checked="true"
            android:buttonTint="#26A69A"/>


        <CheckBox
            android:id="@+id/cbMouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mouth"
            android:textSize="18sp"
            android:textColor="#000000"
            android:checked="true"
            android:buttonTint="#26A69A"/>

        <CheckBox
            android:id="@+id/cbEyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eyes"
            android:textSize="18sp"
            android:textColor="#000000"
            android:checked="true"
            android:buttonTint="#26A69A"/>

        <CheckBox
            android:id="@+id/cbEyebrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eyebrow"
            android:textSize="18sp"
            android:textColor="#000000"
            android:checked="true"
            android:buttonTint="#26A69A"/>

        <CheckBox
            android:id="@+id/cbNose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nose"
            android:textSize="18sp"
            android:textColor="#000000"
            android:checked="true"
            android:buttonTint="#26A69A"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>